<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.register.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="42dp"
            android:contentDescription="@string/app_img"
            app:layout_constraintBottom_toTopOf="@+id/user_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:autofillHints="@string/register_email"
            android:ems="10"
            android:hint="@string/register_email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/user_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:autofillHints="@string/register_username"
            android:ems="10"
            android:hint="@string/register_username"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/reg_user_password"
            app:layout_constraintEnd_toEndOf="@+id/user_email"
            app:layout_constraintStart_toStartOf="@+id/user_email" />

        <EditText
            android:id="@+id/reg_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:autofillHints="@string/user_pass"
            android:ems="10"
            android:hint="@string/user_pass"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/reg_rep_user_password"
            app:layout_constraintEnd_toEndOf="@+id/user_username"
            app:layout_constraintStart_toStartOf="@+id/user_username" />

        <EditText
            android:id="@+id/reg_rep_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:autofillHints="@string/register_rep_pass"
            android:ems="10"
            android:hint="@string/register_rep_pass"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
            app:layout_constraintEnd_toEndOf="@+id/reg_user_password"
            app:layout_constraintStart_toStartOf="@+id/reg_user_password" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/register_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
