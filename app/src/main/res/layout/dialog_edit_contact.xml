<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/state_switch"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/contact_name_edit"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_picture"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/contact_name_edit"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:autofillHints="Contact Name"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_picture"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/get_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Upload Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name_edit"
        app:layout_constraintVertical_bias="0.042" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_contact_picture"
        android:layout_width="135dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_book" />

</androidx.constraintlayout.widget.ConstraintLayout>